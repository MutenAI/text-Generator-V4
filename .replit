modules = ["python-3.11"]
[nix]
channel = "stable-24_05"

[workflows]
runButton = "Run"

[[workflows.workflow]]
name = "Run"
author = 40784344
mode = "sequential"

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "cd content-generation-system && ECONOMIC_MODE=false python -m streamlit run content_generator_app.py --server.port=8080 --server.headless=true --server.enableCORS=false --server.enableWebsocketCompression=false --server.address=0.0.0.0"

